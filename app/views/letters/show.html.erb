




<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @letter.title %></h3>
  </div>
  <div class="panel-body">
    <%= @letter.content %>
  </div>
</div>

<div class="btn btn-info">
	<%= link_to "Edit this Post", edit_letter_path(@letter) %>
</div>

<div class="btn btn-info">
<%= link_to "Delete this Post", letter_path, method: :delete, data: { confirm: "Are you sure you want to delete this letter permanently?"} %>
</div>




